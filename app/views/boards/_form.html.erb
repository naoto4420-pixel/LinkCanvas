<%= form_with(model: board, class: "contents") do |form| %>
  <% if board.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-4 py-3 font-medium rounded-lg mb-6 border border-red-100">
      <h2 class="text-sm font-bold mb-1"><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>
      <ul class="list-disc list-inside text-sm">
        <% board.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :name, "Board Name", class: "block font-bold text-gray-700 mb-2" %>
    <%= form.text_field :name, class: "block w-full shadow-sm rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500 px-4 py-3 outline-none transition" %>
  </div>

  <div class="flex items-center gap-4">
    <%= form.submit class: "flex-1 rounded-lg py-3 px-5 bg-blue-600 hover:bg-blue-700 text-white font-bold cursor-pointer transition shadow" %>
    
    <!-- キャンセルボタンの遷移先は、一覧画面へ戻る -->
    <%= link_to "Cancel", boards_path, class: "flex-1 rounded-lg py-3 px-5 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium text-center transition" %>
  </div>
<% end %>
<% content_for :title, "Boards" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
    <div class="flex">
      <div class="ml-3">
        <p class="text-sm text-yellow-700">
          <span class="font-bold">拡張機能用APIトークン:</span>
          <code class="bg-yellow-100 px-2 py-1 rounded select-all"><%= current_user.authentication_token %></code>
        </p>
        <p class="text-xs text-yellow-600 mt-1">※この文字列をコピーして、Chrome拡張機能の設定画面に入力してください。</p>
      </div>
    </div>
  </div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Boards</h1>
    <%= link_to "New board", new_board_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="boards" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @boards.any? %>
      <% @boards.each do |board| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render board %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", board, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_board_path(board), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", board, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No boards found.</p>
    <% end %>
  </div>
</div>

<div class="min-h-screen flex">
  <!-- 左側：ビジュアルエリア -->
  <div class="hidden lg:flex w-1/2 bg-gray-900 text-white flex-col justify-center px-12 relative overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-full opacity-20 pointer-events-none">
      <!-- 背景パターン -->
      <div class="absolute top-1/4 right-10 w-40 h-40 border-t-4 border-r-4 border-blue-400 rounded-tr-3xl"></div>
      <div class="absolute bottom-10 left-10 w-20 h-20 bg-blue-600 rounded-full blur-xl"></div>
    </div>
    
    <div class="relative z-10">
      <h1 class="text-5xl font-bold mb-6 tracking-tight">Create Account</h1>
      <p class="text-lg opacity-80 leading-relaxed text-gray-300">
        LinkCanvasへようこそ。<br>
        散らかったタブを整理して、<br>
        クリエイティブな時間を生み出しましょう。
      </p>
    </div>
  </div>

  <!-- 右側：フォームエリア -->
  <div class="w-full lg:w-1/2 flex items-center justify-center p-8 bg-gray-50">
    <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-lg border border-gray-100">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Name -->
        <div>
          <%= f.label :name, "ユーザー名", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Taro Yamada", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <!-- Email -->
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autocomplete: "email", placeholder: "user@example.com", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <!-- Password -->
        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-400 float-right mt-0.5"><%= @minimum_password_length %>文字以上</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <!-- Password Confirmation -->
        <div>
          <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <div class="pt-2">
          <%= f.submit "アカウント作成", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center text-sm">
        <span class="text-gray-500">すでにアカウントをお持ちですか？</span>
        <%= link_to "ログインはこちら", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500 ml-1" %>
      </div>
    </div>
  </div>
</div>